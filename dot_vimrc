set wildmenu

set laststatus=2

set hidden
set title
set scrolloff=3
set shortmess=atI
set visualbell
set guioptions=aAce
set spell
set spelllang=en_us

let mapleader = ","

colorscheme twilight
highlight Cursor guifg=black guibg=grey

set modeline
