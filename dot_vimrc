let g:CommandTMaxHeight=20

" Unimpaired configuration
" Bubble single lines
nmap <C-Up> [e
nmap <C-Down> ]e
" Bubble multiple lines
vmap <C-Up> [egv
vmap <C-Down> ]egv

map <Leader><Leader> :ZoomWin<CR>
nmap gV `[v`]
nnoremap <leader>u :GundoToggle<CR>
map <D-/> <plug>NERDCommenterToggle<CR>
